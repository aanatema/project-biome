generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String 
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  reviews Review[]
}

model Media {
  id        String    @id @default(cuid())
  type      MediaType
  createdAt DateTime  @default(now())

  book    Book?
  reviews Review[]

  @@index([type])
}

model Book {
  id    String @id @default(uuid())
  media Media  @relation(fields: [id], references: [id])

  isbn    String   @unique
  title   String
  author  String
  reviews Review[]
}

model Review {
  id        String   @id @default(uuid())
  content   String
  rating    Float
  createdAt DateTime @default(now())

  bookId String?
  Book   Book?   @relation(fields: [bookId], references: [id])

  userId        String
  review_author User   @relation(fields: [userId], references: [id])

  mediaId String
  media   Media  @relation(fields: [mediaId], references: [id])
}

enum MediaType {
  BOOK
}
